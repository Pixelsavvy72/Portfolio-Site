<% include partials/header %>



<div class="container">
    <div class="col-sm-12 col-md-9">
        <div class="thumbnail">
            <a href="<%= foundProject.thumbnail %>">
                <img src="<%= foundProject.thumbnail %>">
            </a>
            <div class="caption-full">
                <div class="col-xs-12">
                    <div class="col-xs-4">
                        <% if (foundProject.optionalImg1) { %>
                            <a href="<%= foundProject.optionalImg1 %>" class="thumbnail">
                                <img src="<%= foundProject.optionalImg1 %>">
                            </a>
                        <% }; %>
                    </div>
                    <div class="col-xs-4">
                        <% if (foundProject.optionalImg2) { %>
                            <a href="<%= foundProject.optionalImg2 %>" class="thumbnail">
                                <img src="<%= foundProject.optionalImg2 %>">
                            </a>
                        <% }; %>
                    </div>
                    <div class="col-xs-4">
                        <% if (foundProject.optionalImg3) { %>
                            <a href="<%= foundProject.optionalImg3 %>" class="thumbnail">
                                <img src="<%= foundProject.optionalImg3 %>">
                            </a>
                        <% }; %>
                    </div>
                </div>

            
                <h1 class="text-center"><strong><%= foundProject.title %></strong></h1>
                <%= foundProject.descriptionFull %><br /><br />
                <h2><strong>Functionality</strong></h2>
                <div class="list-group">
                    <% var myFunctionality = foundProject.functionality.split(","); %>
                    <% myFunctionality.forEach(function(item) { %>
                         <li class="list-item"><%= item %></li>   
                    <% }); %>
                </div>
                <hr />
                <h2><strong>Tech</strong></h2>
                <%= foundProject.tech %>
                <br />
                <hr />
                <% if ( currentUser && currentUser.username === "Craig") { %>
                    <a class="inlineButtons btn btn-xs btn-warning col-xs-2" href="/projects/<%= foundProject._id %>/edit">Edit</a>
                    <form action="/projects/<%= foundProject._id %>?_method=DELETE" method="POST">
                        <button class="inlineButtons btn btn-xs btn-danger pull-right col-xs-2">Delete</button>
                    </form>
                <% }; %>
                    
                
                
            </div> <!--end caption-->

        </div> <!-- end outer thumbnail -->
    </div>
    <div class="col-sm-12 col-md-3 text-center">
        <% if( foundProject.githubLink ) { %>
            <a class="btn btn-success btn-large pull-left" href="<%= foundProject.githubLink %>">See the code on Github</a><br /><br />
        <% } %>
        <% if( foundProject.exampleLink ) { %>
            <a class="btn btn-success btn-large pull-left" href="<%= foundProject.exampleLink %>">See it live</a>
        <% }; %>
    </div>
</div>



<% include partials/footer %>